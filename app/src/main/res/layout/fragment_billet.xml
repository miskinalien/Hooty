<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morelle.e4fi_android_hoot.Fragments.BilletFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/billet_titre"
        android:hint="Titre"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/billet_desc"
        android:gravity="top|center_vertical"
        android:layout_below="@+id/billet_titre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_alignParentBottom="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_mode_edit_white_48dp"
        android:id="@+id/edit_billet"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/blue" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_delete_white_48dp"
        android:id="@+id/delete_billet"
        app:backgroundTint="@color/marron"
        android:visibility="invisible"
        android:layout_above="@+id/edit_billet"
        android:layout_alignStart="@+id/edit_billet"
        android:layout_marginBottom="17dp" />

</RelativeLayout>
